{
  "env": {
    "commonjs": true,
    "es2021": true,
    "jest/globals": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": [ "jest" ],
  "rules": {
    "no-constant-condition": "off",
    "no-unused-vars": [ "error", { "argsIgnorePattern": "^_" } ]
  }
}
